{
  "name": "plista/chimney",
  "description": "Console tool to ease building new versions of packages",
  "require": {
    "php": ">=5.5.0",
    "symfony/console": "^3.0",
    "symfony/process": "^3.0",
    "plista-dataeng/updep": "1.0.0-beta1"
  },
  "require-dev": {
    "phpunit/phpunit": "4.*"
  },
  "minimum-stability" : "beta",

  "autoload": {
    "psr-4": {
      "Plista\\Chimney\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Plista\\Chimney\\Test\\Unit\\": "tests/unit/Chimney/",
      "Plista\\Chimney\\Test\\Integration\\": "tests/integration/",
      "Plista\\Chimney\\Test\\Fixture\\": "tests/fixtures/"
    }
  },
  "scripts": {
    "test": "phpunit"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "git@gitlab.plista.com:dataeng/updep.git"
    }
  ]
}
